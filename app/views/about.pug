include includes/head.pug

body(style='background: #030303 url("/static/media/bg/' + bg + '.jpg") center/cover no-repeat')
    include includes/nav.pug
    div(id='content' class='container scrollable-container')
        div(class='row align-items-start justify-content-center')
            div(class='col-10 col-md-6 col-lg-5')
                div(id='about-profile')
                    img(src='/static/media/profile.jpg' alt='A photo of Carrie Vrtis')
                div(id='about-summary' class='section')
                    h3(class='about-header') #{lang.about.summary.name}
                    hr
                    each v in lang.about.summary.p
                        p #{v}
            div(class='col-10 col-md-6 col-lg-5')    
                div(id='about-tech' class='section')
                    h3(class='about-header') #{lang.about.tech.name}
                    hr
                    each v in lang.about.tech.list
                        div(class='about-tech-subheader') #{v.name}
                        div(class='flex-spacing-container')
                            each w in v.sublist
                                div(class='about-tech-item')
                                    | &#8226;&nbsp;
                                    | #{w}
                                    | &nbsp;
                div(id='about-social' class='section')
                    h3(class='about-header') #{lang.about.social.name}
                    hr
                    div(class='flex-spacing-container')
                        a(href='https://www.facebook.com/cjvrtis' target='_blank' class='about-social-link')
                            img(src='/static/media/social/facebook.png' alt='Facebook' class='about-social-icon')
                        a(href='https://twitter.com/BRBCarrying' target='_blank' class='about-social-link')
                            img(src='/static/media/social/twitter.png' alt='Twitter' class='about-social-icon')
                        a(href='https://www.linkedin.com/in/carrie-vrtis-aa4404119/' target='_blank' class='about-social-link')
                            img(src='/static/media/social/linkedin.png' alt='LinkedIn' class='about-social-icon')
                        a(href='https://github.com/carriejv' target='_blank' class='about-social-link')
                            img(src='/static/media/social/github.png' alt='Github' class='about-social-icon')
                    div(class='flex-spacing-container')
                        a(href='/static/media/resume.pdf' target='_blank')
                            | #{lang.about.social.resume}
                            | &raquo;
                
    include includes/footer.pug